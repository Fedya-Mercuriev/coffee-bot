{
  "name": "coffee_bot",
  "version": "1.0.0",
  "description": "A bot taht helps ordering coffee and manage the coffee shop itself",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run eslint",
    "serve": "node dist/bot.js",
    "watch-node": "nodemon dist/bot.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/bot.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Fedya-Mercuriev/coffee-bot"
  },
  "keywords": [
    "telegraf",
    "bot",
    "typescript",
    "nodejs",
    "telegram"
  ],
  "author": "Glenn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Fedya-Mercuriev/coffee-bot/issues"
  },
  "homepage": "https://github.com/Fedya-Mercuriev/coffee-bot#readme",
  "dependencies": {
    "dotenv": "^8.0.0",
    "lodash": "^4.17.11",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "telegraf": "^3.30.1",
    "telegraf-i18n": "^6.5.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.14.135",
    "@types/node": "^12.0.10",
    "@types/request-promise": "^4.1.44",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
